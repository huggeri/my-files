#include <stdio.h> 
#include <stdlib.h> 
#include <malloc.h> 

void shake(int *A, int n)
{
	int a = 0, b = n - 1;
	bool flag = true;
	int c = 0;

	while (a < b && flag == true)
	{
		flag = false;
		for (int i = a, j = b; i < b && j > a; i++, j--)
		{
			if (A[i] > A[i + 1])
			{
				c = A[i];
				A[i] = A[i + 1];
				A[i + 1] = c;
				flag = true;
			}
			if (A[j] < A[j - 1])
			{
				c = A[j];
				A[j] = A[j - 1];
				A[j - 1] = c;
				flag = true;
			}
		}
		a++;
		b--;
	}

	for (int i = 0; i < n; i++)
	{
		printf("%d\n", A[i]);
	}
}

void main()
{
	int n;
	scanf_s("%d", &n);
	int *A = (int *)malloc(n*sizeof(int));

	for (int i = 0; i < n; i++)
	{
		A[i] = rand() % (20);
		printf("%d\n", A[i]);
	}

	printf("\n");
	shake(A, n);
	free(A);
	system("pause");
}
