#include <stdio.h>
#include <stdlib.h>
#include <math.h>

void main()
{
	double x = 0.1, onePow = 1, xPow = 1, comPow = 1, functionY = 1, i = 1;
	do
	{
		xPow *= x;
		onePow *= (-1);
		comPow *= (2 * i - 3) / 2 * i;
		functionY += onePow*comPow*xPow;
		i++;
		x += 0.1;
		printf("%.4lf\n", functionY);
	} while (x < 1);

	system("pause");
}
